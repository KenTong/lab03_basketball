<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#512DA8"
    >
    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.opro.ken.lab03_basketball.MainActivity">

        <fragment android:name="com.opro.ken.lab03_basketball.point_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            tools:layout="@layout/fragment_point_counter2" />

        <fragment android:name="layout.twins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            tools:layout="@layout/fragment_twins" />
    </LinearLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="420dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />
    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
        android:gravity="center"
        android:onClick="Point"
        android:text="重置"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@android:color/holo_red_dark"
        />
</RelativeLayout>